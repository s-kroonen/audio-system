{
  "name": "@audio/client",
  "private": true,
  "main": "dist/main/main.js",
  "type": "module",
  "version": "0.1.1",
  "scripts": {
    "build:ts": "tsc",
    "build": "tsc && electron-builder",

    "dev": "concurrently -k \"pnpm build:ts --watch\" \"pnpm electron:dev\"",
    "electron:dev": "wait-on dist/main/main.js && electron .",

    "start": "electron .",
    "start:headless": "electron . --headless"
  },
  "devDependencies": {
    "@types/node": "^25.0.1",
    "concurrently": "^9.2.1",
    "electron": "^30.5.1",
    "electron-builder": "^24.13.3",
    "typescript": "^5.4.0",
    "wait-on": "^9.0.3"
  },
  "dependencies": {
    "electron-log": "^5.4.3"
  }
}
